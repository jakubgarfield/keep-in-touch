<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact</th>
      <th>Catchup period</th>
      <th>Next catchup</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.contact %></td>
        <td><%= friend.catchup_period %></td>
        <td><%= friend.next_catchup.scheduled %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Friend', new_friend_path, class: "btn btn-primary" %></p>
